<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);">
   <children>
      <VBox spacing="15" alignment="CENTER" layoutX="150.0" layoutY="80.0">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>

         <Label text="Bienvenido" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>

         <TextField promptText="Usuario" style="-fx-background-radius: 8; -fx-background-color: white;"/>
         <TextField promptText="Contraseña" style="-fx-background-radius: 8; -fx-background-color: white;"/>

         <Button text="Iniciar Sesión" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" prefWidth="200"/>

      </VBox>
   </children>
</AnchorPane>
